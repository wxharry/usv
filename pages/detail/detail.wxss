.chart-title{
  margin: 30rpx 0rpx;
  display: flex;
  justify-content: center;
}

.canvas{
  /* background-color: black; */
  line-height: 500rpx;
  width: 100%;
  height: 500rpx;
  margin: 10rpx 5rpx;
}

.nav {
  /* padding: 10rpx; */
  width: 100%;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgba(236, 146, 146, 0.8);
  text-align: center;
  white-space:nowrap;
  display: flex;
  direction: row;
  z-index: 99;
  position: fixed;
}

.navTab{
  /* margin: 0rpx 20rpx; */
  width: 18%;
  color: white;
  justify-content: center;
  display: inline-block;
  text-align: center;
}
.navTab.active{
  border-radius: 25rpx 25rpx 0 0 ;
  background-color: rgba(236, 146, 146, 0.9);
  font-size: 37rpx;
}

.content-container{
  overflow-y: scroll;
  padding: 10rpx 20rpx;
  padding-top: 80rpx;
  margin-bottom: 30rpx;

}
.text-container{
  padding: 10rpx;
}

.text-title{
  font-size: 50rpx;
  margin: 20rpx;
}

