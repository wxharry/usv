<!-- pages/data/data.wxml -->
  <!-- start -->
<view>
  <map class='map' id="map" longitude="{{map.longitude}}" latitude="{{map.latitude}}" scale="20" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap"  bindregionchange="regionchange" show-location style="width: 100%; height: 300px;">
  <cover-view  class='battery'>
    <cover-view class='battery-type'>{{battery}}
        <!-- <image class='img-type' src='/images/battery.png'/> -->
        <!-- <view class='battery-type'>{{battery}}%</view> -->
    </cover-view>
    <cover-image class='img-type' src='/images/battery.png'/>
  </cover-view>

  </map>
  <!-- polyline="{{polyline}}" -->

  <view class='para-container'>
    <view class='para-item' wx:for="{{paras}}" wx:for-item="item" wx:key="key">
      <view class='texts'>
        <text class='text-type' >{{item.name}}：{{item.data}}</text>
        <text class='status-type'>{{item.norm.max <= item.data <= item.norm.max ? '正常' : '不正常' }}</text>
      </view>
    </view>
  </view>
  <navigator class="nav-type" url="../charts/charts">绘制折线图</navigator>
  <!-- <image class="nav-type" bindtap="navigateTo" src="../../images/lineChart.png"></image> -->
</view>
